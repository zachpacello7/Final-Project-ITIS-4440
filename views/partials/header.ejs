<body>
    <header>
        <h1>
            Life Line
        </h1>
        
    </header>
    <br>
    <!--We can connect the different pages to this navigation bar, I would use href however I am sure theres some ejs stuff we could do-->
    <nav>
        <%if(!user){%>
            <a href ="/">Home</a>
            <a href="/exercises/allExercises">Fitness</a> 
            <a href="/exercises/recipe">Recipes</a> 
            <a href="/signup">Sign up</a>
            <a href="/login">Login</a>   
        <%}
        else{%>
            <a href ="/">Home</a>
            <a href="/profile">Profile</a>
            <a href="/exercises/allExercises">Fitness</a> 
            <a href="/exercises/recipe">Recipes by category</a> 
            <a href="/exercises/choosenRecipes">Recipes by food item</a> 
            <a href="/logout">Logout</a>
            <p>Welcome <%= user.name%></p>
        <%}%>
        <%successMessages.forEach(message=>{%>
            <div class="successMessages">
                <%=message%>
            </div>
            <% }) %>
            <%errorMessages.forEach(message=>{%>
                <div class="errorMessages">
                    <%=message%>
                </div>
                <% }) %>
	</nav>
    <style>
        .errorMessages{
    position:absolute;
    top:170px;
    background-color: red;
    color:white;
    text-align: center;
    width:100%;
}
.successMessages{
    position:absolute;
    top:80px;
    background-color: green;
    color:white;
    text-align: center;
    width:100%;
}
    </style>